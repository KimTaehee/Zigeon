<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#686868" >

    <ImageView
        android:id="@+id/login_img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:layout_marginLeft="25sp"
        android:src="@drawable/ic_login_img_logo" />
    	
    <EditText
        android:id="@+id/Login_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_img_logo"
        android:layout_marginTop="20sp"
        android:layout_alignLeft="@id/login_img_logo"
        android:ems="10"
        android:hint="@string/login_id" >

        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/Login_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/login_img_logo"
        android:layout_below="@+id/Login_Id"
        android:layout_marginTop="2sp"
        android:ems="10"
        android:hint="@string/login_password"
        android:inputType="textPassword" />

    <ImageButton
        android:id="@+id/login_imgbtn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/Login_Id"
        android:layout_alignTop="@+id/Login_Id"
        android:layout_marginLeft="10sp"
        android:background="#686868"
        android:src="@drawable/ic_login_btn_login" />
    
    <Switch
        android:id="@+id/login_switch_autologin"
        android:layout_width="wrap_content"
        android:layout_height="42sp"
        android:layout_alignLeft="@+id/login_img_logo"
        android:layout_alignRight="@+id/login_imgbtn_login"
        android:layout_below="@+id/Login_Password"
        android:layout_marginTop="10sp"
        android:background="#FFFFFF"
        android:textColor="#878787"
		android:thumb="@drawable/ic_login_switch_on"
        android:text="@string/autologin" />

    <ImageButton
        android:id="@+id/login_imgbtn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_img_logo"
        android:layout_below="@+id/login_switch_autologin"
        android:layout_marginTop="24sp"
        android:background="#686868"
        android:src="@drawable/ic_login_btn_register" />

    <ImageButton
        android:id="@+id/login_imgbtn_find_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/login_imgbtn_register"
        android:layout_toRightOf="@id/login_imgbtn_register"
        android:layout_marginLeft="24sp"
        android:background="#686868"
        android:src="@drawable/ic_login_btn_find_account" />

    <ImageButton
        android:id="@+id/login_imgbtn_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/login_imgbtn_find_account"
        android:layout_toRightOf="@id/login_imgbtn_find_account"
        android:layout_marginLeft="24sp"
        android:background="#686868"
        android:src="@drawable/ic_login_btn_facebook" />

</RelativeLayout>