<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:minHeight="45dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/listview_item_comment_tv_writer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="15dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="Name"
            android:textColor="#686868"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/listview_item_comment_tv_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxWidth="220dp"
                android:minHeight="30dp"
                android:padding="2dp"
                android:gravity="center_vertical"
                android:text="contentscontentscontentscontentscontentscontentscontentscontentscontentscontentscontents"
                android:textColor="#686868"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/listview_item_comment_iv_delete"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/listview_item_comment_tv_contents"
                android:layout_weight="1"
                android:src="@drawable/btn_delete_normal" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/listview_item_comment_tv_date"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Date"
        android:textColor="#686868"
        android:textSize="12sp" />

</LinearLayout>