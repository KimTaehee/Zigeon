<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5sp"
    android:textSize="16sp" >

    <ImageView
        android:id="@+id/listview_item_posting_iv_picture"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:padding="2sp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_auil_empty" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/listview_item_posting_iv_picture"
        android:layout_toRightOf="@+id/listview_item_posting_iv_picture"
        android:orientation="horizontal"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight="3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/listview_item_posting_tv_writer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_weight="1"
                android:padding="2sp"
                android:text="Name"
                android:textColor="#686868"
                android:textSize="12sp" />
            
            <TextView
                android:id="@+id/listview_item_posting_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="2sp"
                android:text="title"
                android:textColor="#686868"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/listview_item_posting_tv_date"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2sp"
            android:text="Date"
            android:textColor="#686868"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>