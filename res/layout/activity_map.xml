<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/mapmap"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         >
    </RelativeLayout>

    <ImageView
        android:id="@+id/map_iv_aim"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/map_aim" />

    <LinearLayout
        android:id="@+id/map_options"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:background="#686868"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/map_btn_move_to_mylocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#686868"
            android:text="@string/map_location"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/map_btn_select_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#686868"
            android:text="Confirm"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/map_tv_show_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#686868"
            android:text="Address"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>