<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/landmark_layout_info"
        android:layout_width="match_parent"
        android:layout_height="250dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/landmark_iv_landmark_picture"
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_auil_empty" >
            </ImageView>

            <RatingBar
                android:id="@+id/landmark_ratingbar"
                style="@style/LandmarkRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_alignBottom="@+id/landmark_iv_landmark_picture"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/landmark_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/landmark_ratingbar"
                android:layout_margin="3sp"
                android:layout_marginTop="2dp"
                android:text="@string/landmark_tv_name"
                android:textColor="#000000"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/landmark_tv_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/landmark_tv_name"
                android:layout_margin="3sp"
                android:text="@string/landmark_tv_contents"
                android:textColor="#000000"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/landmark_layout_map"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_below="@id/landmark_tv_contents" >
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/landmark_layout_info" >

        <TabHost
            android:id="@+id/landmark_tabhost"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:id="@+id/landmark_layout_commentlist"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <ListView
                            android:id="@+id/landmark_commentlist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/landmark_commentlist"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/landmark_edit_input_comment"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:hint="@string/edit_message" >

                                <!-- <requestFocus android:layout_width="match_parent" /> -->
                            </EditText>

                            <Button
                                android:id="@+id/landmark_btn_input_comment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="input" />
                        </LinearLayout>
                    </LinearLayout>

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    </TableRow>

                    <ListView
                        android:id="@+id/landmark_postinglist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true" />
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </RelativeLayout>

</RelativeLayout>