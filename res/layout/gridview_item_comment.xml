<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/comment_linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/gridview_item_comment_tv_nick_name"
            android:layout_width="30sp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="left"
            android:padding="2sp"
            android:text="Nickname"
            android:textColor="#686868"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/gridview_item_comment_tv_time"
            android:layout_width="20sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="2sp"
            android:text="Time"
            android:textColor="#686868"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment_linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/comment_linearLayout1"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/gridview_item_comment_tv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2sp"
            android:text="Name"
            android:textColor="#686868"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>